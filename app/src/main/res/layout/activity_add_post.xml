<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="POST JOB (Recruiter Only)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/fragment_frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Job Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Qualification"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:gravity="center"
                            android:text="Company Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Designation/Post*"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/post"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="10sp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location*"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/location"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Country*"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/spinner_bg" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/state1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State*"
                        android:textColor="@color/black"
                       />

                   <!-- <Spinner
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/spinner_bg" />-->
                    <EditText
                        android:id="@+id/Tstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:drawableRight="@drawable/ic_add_box"
                        android:editable="false"
                        android:padding="10sp"
                        android:background="@drawable/edittext_bg"
                        android:isScrollContainer="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/city1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City*"
                        android:textColor="@color/black" />

                   <!-- <Spinner
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/spinner_bg" />-->
                    <EditText
                        android:id="@+id/Tcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:editable="false"
                        android:padding="10sp"
                        android:isScrollContainer="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly Salary"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/currency"
                            android:layout_width="100sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="2sp"
                            android:layout_weight="0.8"
                            android:background="@drawable/spinner_bg" />

                        <EditText
                            android:id="@+id/fromsalary"
                            android:layout_width="100sp"
                            android:layout_height="40sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:hint="Ex:8000"
                            android:inputType="number"
                            android:padding="10sp"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="to"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/tosalary"
                            android:layout_width="100sp"
                            android:layout_height="40sp"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:hint="Ex:15000"
                            android:inputType="number"
                            android:padding="10sp"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Vacancy*"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/vacancy"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:inputType="number"
                        android:padding="10sp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Description*"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/aboutwork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:editable="true"
                        android:enabled="true"
                        android:focusable="true"
                        android:gravity="start"
                        android:hint="about work"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:padding="5sp" />

                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/nextDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="10sp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_next"
                    app:borderWidth="0sp" />


            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Job Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Qualification"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:gravity="center"
                            android:text="Company Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Qualification"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/qualificationn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/ic_add_box"
                        android:editable="false"
                        android:isScrollContainer="true"
                        android:padding="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Stream"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/streamm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:editable="false"
                        android:isScrollContainer="true"
                        android:padding="10sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/otherspecialisation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialisation"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/extraspec"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Post for"
                        android:textColor="@color/black" />

                    <RadioGroup
                        android:id="@+id/jobapply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:checkedButton="@id/job"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:text="Experienced" />

                        <RadioButton
                            android:id="@+id/fresher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fresher" />

                        <RadioButton
                            android:id="@+id/internship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Internship" />


                    </RadioGroup>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/experiencelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Spinner
                            android:id="@+id/experience"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:entries="@array/Experience"
                            android:spinnerMode="dropdown" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="to"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/experience1"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"

                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:entries="@array/Experience1"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Job Type"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/jobtype"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/JobType" />

                    <Spinner
                        android:id="@+id/otherjobtype"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/SubJobTYpe"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Software Knowledge"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvItemSelected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:paddingLeft="10sp"
                            android:singleLine="false"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btnOrder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:background="@color/colorPrimaryDark"
                            android:drawableLeft="@drawable/ic_expand_more"
                            android:drawableTint="@color/white"
                            android:paddingLeft="15sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/osoft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical"
                    android:visibility="gone">

