                            android:id="@+id/othersoftware"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/edittext_bg"
                            android:padding="10sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
