                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Job Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="Qualification"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:gravity="center"
                            android:text="Company Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name*"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/comname"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="10sp"
                        android:singleLine="true" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Website"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/comweb"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/edittext_bg"
                        android:padding="10sp"
                        android:singleLine="true" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Process for applying job"
                        android:textColor="@color/black" />


                    <RadioGroup
                        android:id="@+id/jobprocess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:layout_marginTop="5sp"
                        android:checkedButton="@id/seekeremail"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/seekeremail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Receive resume in my inbox" />

                        <RadioButton
                            android:id="@+id/form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fill my organisation form" />


                    </RadioGroup>


                    <EditText
                        android:id="@+id/formurl"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="5sp"
                        android:hint="your url"
                        android:background="@drawable/edittext_bg"
                        android:padding="10sp"
                        android:visibility="gone" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/black" />


                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/Handicap"
                        android:textSize="16sp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="20sp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/previousjobdes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_arrow"
                        app:borderWidth="0sp" />

                    <Button
                        android:id="@+id/PostJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/buttonround"
                        android:text="post"
                        android:textColor="@color/white"
                        app:borderWidth="0sp" />

                </RelativeLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>